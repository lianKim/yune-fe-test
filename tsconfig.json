{
  "compilerOptions": {
    "target": "ES2016",
    "jsx": "preserve",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~pages/*": ["src/pages/*"],
      "~components/*": ["src/components/*"],
      "~lib/*": ["src/lib/*"],
      "~assets/*": ["src/assets/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
