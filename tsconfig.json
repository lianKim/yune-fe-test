{
  "compilerOptions": {
    "target": "ES2016",
    "jsx": "preserve",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "~assets/*": ["assets/*"],
      "~components/*": ["components/*"],
      "~pages/*": ["pages/*"],
      "~apis/*": ["lib/apis/*"]
    }
  },
  "include": ["src", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
